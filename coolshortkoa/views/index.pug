head
    link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css' rel='stylesheet')
    style.
        .home-mybitly {
            padding: 80px 0;
            background: #ffffff;
        }
        .home-mybitly .single {
            max-width: 650px;
            margin: 0 auto;
            text-align: center;
            position: relative;
            z-index: 2;
        }
        .home-mybitly .single h2 {
            font-size: 22px;
            color: #486a86;
            text-transform: uppercase;
            margin-bottom: 40px;
        }
        .home-mybitly .single .form-control {
            height: 50px;
            background: rgba(193, 230, 239, 0.6);
            border-color: #3676a9;
            border-radius: 20px 0 0 20px;
        }
        .home-mybitly .single .form-control:focus {
            box-shadow: none;
            border-color: #243c4f;
        }
        .home-mybitly .single .btn {
            min-height: 50px;
            border-radius: 0 20px 20px 0;
            background: #243c4f;
            color: #fff;
        }
section.home-mybitly
    .container
        .row
            .col-sm-12
                .single
                    h2 Cool URL Shortener
                    form.input-group(action='/show_shortened' method='post')
                        input.form-control(name='long_url' type='text' placeholder='Enter your not so cool long URL')
                        span.input-group-btn
                            input.btn.btn-theme(type='submit' value='Get Cool URL')
